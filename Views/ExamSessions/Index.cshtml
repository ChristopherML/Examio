@model Examio.ViewModels.ExamSessionAllOrSearchedListVM

@{
    ViewData["Title"] = "Exam Sessions";
}

<h1>Exam Sessions</h1>

<h4>Index</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-12">
        <form asp-controller="ExamSessions" asp-action="Index" method="get">
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Search.Name" class="control-label"></label>
                    <input asp-for="Search.Name" class="form-control" />
                    <span asp-validation-for="Search.Name" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Search.StartDate" class="control-label"></label>
                    <input asp-for="Search.StartDate" class="form-control" />
                    <span asp-validation-for="Search.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Search.EndDate" class="control-label"></label>
                    <input asp-for="Search.EndDate" class="form-control" />
                    <span asp-validation-for="Search.EndDate" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Search.ExamSiteName" class="control-label"></label>
                    <input asp-for="Search.ExamSiteName" class="form-control" />
                    <span asp-validation-for="Search.ExamSiteName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].ExamSite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExamSessions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExamSite.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
