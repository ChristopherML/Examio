@model Examio.ViewModels.ExamSessionAllOrSearchedListVM  

@{
    ViewData["Title"] = "Exam Sessions";
}

<h1>Exam Sessions</h1>

<h4>Index</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="ExamSessions" asp-action="Index" method="get">
    <p>
        Name: <input type="text" asp-for="Search.Name" />
        Start Date: <input type="datetime-local" asp-for="Search.StartDate" />
        End Date: <input type="datetime-local" asp-for="Search.EndDate" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamSessions[0].ExamSite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ExamSessions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExamSite.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
